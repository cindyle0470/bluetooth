<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_ble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_classic_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="傳統藍芽 - Server"
        app:layout_constraintBottom_toTopOf="@+id/btn_ble"
        app:layout_constraintStart_toStartOf="@+id/btn_ble"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_classic_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="傳統藍芽 - client"
        app:layout_constraintStart_toStartOf="@+id/btn_classic_server"
        app:layout_constraintTop_toBottomOf="@+id/btn_classic_server" />
</androidx.constraintlayout.widget.ConstraintLayout>